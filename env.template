# EdgeOne Pages 环境变量模板
# 复制此文件到 EdgeOne Pages 控制台的环境变量配置中

# Supabase 配置
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# JWT 密钥 (请使用强密码)
JWT_SECRET=your-super-secret-jwt-key-for-production

# 支付配置
ALIPAY_NOTIFY_URL=/api/alipay/notify
ALIPAY_RETURN_URL=/payment/success

# 微信支付配置
WECHAT_APP_ID=your_wechat_app_id
WECHAT_MCH_ID=your_merchant_id
WECHAT_PAY_KEY=your_wechat_pay_key
WECHAT_NOTIFY_URL=/api/wechat/notify

# PayPal 配置
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# 业务配置
BASE_PRICE=199900
COUPON_DISCOUNT=5000
PACKAGE_NAME=Travel Package

# 优惠券配置
WELCOME_COUPON_AMOUNT=199900
SAVE_COUPON_AMOUNT=5000
WELCOME_COUPON_CODE=WELCOME2024
SAVE_COUPON_CODE=SAVE50
WELCOME_COUPON_PREFIX=WELCOME
COUPON_EXPIRES_AT=2024-12-31T23:59:59Z

# 前端配置
NEXT_PUBLIC_PACKAGE_1_PRICE=199900
NEXT_PUBLIC_PACKAGE_2_PRICE=299900
NEXT_PUBLIC_PACKAGE_3_PRICE=399900

# 环境
NODE_ENV=production

# 注意：
# 1. 这些变量必须在 EdgeOne Pages 控制台中配置
# 2. 不要在代码中硬编码这些值
# 3. JWT_SECRET 应该使用强密码
# 4. 确保 Supabase 项目已正确设置
# 5. 所有价格单位为分（cents）